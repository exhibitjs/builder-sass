{
  "name": "exhibit-sass",
  "description": "Exhibit plugin for compiling SCSS files",
  "version": "0.2.0",
  "author": "Callum Locke",
  "bugs": {
    "url": "https://github.com/exhibitjs/exhibit-sass/issues"
  },
  "dependencies": {
    "node-sass": "^3.2.0"
  },
  "devDependencies": {
    "babel": "^5.6.14",
    "babel-eslint": "^3.1.19",
    "eslint": "^0.24.0",
    "nodemon": "^1.3.7"
  },
  "files": [
    "dist",
    "src"
  ],
  "homepage": "https://github.com/exhibitjs/exhibit-sass",
  "keywords": [
    "exhibit-plugin"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/exhibitjs/exhibit-sass.git"
  },
  "scripts": {
    "build": "babel src --source-maps --out-dir dist",
    "prepublish": "eslint src && npm run build",
    "watch": "nodemon --exec 'npm run build' --watch src --watch index.js --watch package.json"
  }
}
